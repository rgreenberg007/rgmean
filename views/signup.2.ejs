<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <!-- link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" -->
    <!-- link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" -->

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script><!-- load angular -->
    <!-- ??? Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <!-- ??? Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-filter/0.5.8/angular-filter.min.js"></script>

    <style>
        body         { padding-top:80px; }
    </style>

<script>
        angular.module('emailExample', [])
          .controller('ExampleController', ['$scope', function($scope) {
            $scope.email = {
              text: 'me@example.com'
            };
          }]);
</script>

</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- form action="/signup" method="post" -->
    <!-- form action="/signup" method="post" name="myForm" ng-controller="ExampleController" -->
    <form  name="myForm" >
        <div class="form-group">
            <label>Email</label>
            <!-- input type="text" class="form-control" name="email" -->
            <input type="text" class="form-control" name="email" placeholder="email" required
            #email="ngModel" [(ngModel)]="userService.selectedUser.email" 
            required  [pattern]="emailRegex" [ngClass]="{'invalid-textbox' :signUpFrm.submitted && !email.valid }">
        
        </div>
        <div class="form-group">
            <label>Password</label>
            <!-- input type="password" class="form-control" name="password" -->
            <input type="password" class="form-control" name="password"
            #password="ngModel" [(ngModel)]="userService.selectedUser.password" 
            required minlength="3" [ngClass]="{'invalid-textbox' :signUpFrm.submitted && !password.valid }">
        </div>
        <div class="form-group">
                <label>Confirm Password</label>
                <!-- input type="password" class="form-control" name="password2" -->
                <input type="password" class="form-control" name="password2"
                #password="ngModel" [(ngModel)]="userService.selectedUser.password2" 
                required minlength="3" [ngClass]="{'invalid-textbox' :signUpFrm.submitted && !password2.valid }">
        </div>
        <div class="form-group">
            <label>Screen Name</label>
            <!-- input type="text" class="form-control" name="screenName" -->
            <input type="text" class="form-control" name="screenName" placeholder="Screen Name"
            #screenName="ngModel" [(ngModel)]="userService.selectedUser.screenName" 
            required  [ngClass]="{'invalid-textbox' :signUpFrm.submitted && !screenName.valid }">
        </div>
        <!-- button type="submit" class="btn btn-warning btn-lg">Signup</button -->
        <button type="submit" class="btn btn-warning btn-lg" ng-click="createUse()"
        ng-disabled="!myForm.email.$dirty || !myForm.password.$dirty || !myForm.password2.$dirty
         || !myForm.screenName.$dirty ||
        (myForm.email.$dirty && myForm.email.$invalid) || (myForm.password.$dirty && myForm.password.$invalid) ||
        (myForm.password2.$dirty && myForm.password2.$invalid) ||
        (myForm.screenName.$dirty && myForm.screenName.$invalid)"
        >Signup</button>
    </form>

    <hr>
    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>
