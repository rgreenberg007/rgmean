<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>

</head>
<body>
<div class="container">
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> RG's List App - Your Profile</h1>
        <a href="javascript:history.go(-1)" class="btn btn-default btn-sm">Close Your Profile</a>
    </div -->

    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> RG's List App - Your Profile </h3>
                <% if (user.local.email) { %>
                    <p>
                        <strong>Email</strong>: <%= user.local.email %><br>
                        <strong>Screen Name</strong>: <%= user.local.screenName %><br>
                        <strong>Private</strong>: <%= user.local.private %><br>
                        
                        <form action="/changeProfile" method="post">
                            <div class="form-group">
                                <label>On Save Change Screen Name to: </label>
                                <input type="text" class="form-control" name="screenNameNew"  value="<%= user.local.screenName %>">
                            </div>
                            <div class="form-group">
                                <label>On Save change Private (Y/N) to: </label>
                                <select type="text" class="form-control" name="privateNew"  
                                value="<%= user.local.private %>" > 
                                <% if (user.local.private == "N") { %>
                                    <option value="Y" >Y</option>
                                    <option value="N" selected>N</option>
                                <% } else { %>
                                    <option value="Y" selected>Y</option>
                                    <option value="N" >N</option>
                                <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">Save</button>
                        </form>
                    </p>
                   
                    <a href="/chgPassword" class="btn btn-default"  >Change Password</a>
                    <!-- a href="/unlink/local" class="btn btn-default">Unlink</a -->
                    <a href="/unlink/local" class="btn btn-default"  onclick="return confirm('Are you sure you want to be removed completely from this app?')">Remove Me!</a>
                   
                    <a href="javascript:history.go(-1)" class="btn btn-default btn-sm">Close Your Profile</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
            </div>

        </div>       
    </div>
</div>
</body>
</html>
